  <div class="actions">
    <!-- ingresa un button con la accion como segundo parametro -->
    <ul>
      <%= button_to_function "add Url", "addUrl()", :class => "" %>
    </ul>
  </div>
  
  <div id="padre"></div>
  
  <!-- 19-09-2011 -->
