<p id="notice"><%= notice %></p>
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%=h raw(@post.content) %>
</p>

<p>
  <b>Urls:</b>
  <ul>
  <%- @post.urls.each do |url|  %>
  <%- if url.link.index("http://0.0.0.0:3000/").nil?  %>
  <li><%= link_to(url.link, url.link, html_options = {'target' => "_blank"}) %></li>
    <!--<li><%=link_to url.link, url.link %></li> -->
    <!-- xxxxx <li><%= link_to url.link, url.link %></li> -->
    <%-elsif %>
    <li><%= link_to url.link, url.link %></li>
    <%- end%>
  <%- end %>
  </ul>
</p>

<%= form_for([@post, @post.urls.build]) do |f| %>
<div class="field">
  <%= f.label :link %><br />
  <%= f.text_field :link %>
  
  <%= f.submit%>
</div>
<%- end -%>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
